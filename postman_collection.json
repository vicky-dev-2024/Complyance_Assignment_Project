{
  "info": {
    "name": "Readiness Analyzer (Assignment)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Upload (clean)",
      "request": {
        "method": "POST",
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": [
                "sample_clean.json"
              ]
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/upload",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "upload"
          ]
        }
      }
    },
    {
      "name": "Analyze",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"uploadId\": \"u_abc\", \"questionnaire\": {\"webhooks\": true, \"sandbox_env\": true, \"retries\": false}}"
        },
        "url": {
          "raw": "{{baseUrl}}/analyze",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "analyze"
          ]
        }
      }
    },
    {
      "name": "Get Report",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/report/r_abc",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "report",
            "r_abc"
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://<your-app>"
    }
  ]
}